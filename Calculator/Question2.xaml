<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.Question2"
             Title="Question 2">
    <VerticalStackLayout BackgroundColor="WhiteSmoke">
        <Label Text="Question 2 of 10" TextColor="Red" FontSize="Body"/>
        
        <Label Text="What is the Subtraction of 30 and 8 =?" FontSize="Subtitle" HorizontalTextAlignment="Center" TextColor="DarkGreen"/>
        <Grid Padding="16" RowSpacing="2" ColumnSpacing="2"
          RowDefinitions="*,*,*,*,*,*,*,*"
          ColumnDefinitions="*,*,*" >
            <Button Text="12" Grid.Row="2" Grid.Column="0" Clicked="WrongClicked" />
            <Button Text="29" Grid.Row="2" Grid.Column="1" Clicked="WrongClicked" />
            <Button Text="28" Grid.Row="3" Grid.Column="0" Clicked="WrongClicked"/>
            <Button Text="22" Grid.Row="3" Grid.Column="1" Clicked="AnsClicked"/>
            <Button Text="Next >" Clicked="NextClicked" Grid.Row="6" Grid.Column="4" TextColor="White" BorderWidth="2" BorderColor="Black" Background="Green"/>

        </Grid>

    </VerticalStackLayout>
</ContentPage>